<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display">
          <%= @friend.first_name %>
          <%= @friend.last_name %>
        </h1>
        <p class="lead">
          <%= @friend.email %> |
          <%= @friend.phone %> |
          <%= @friend.twitter %> |
        </p>
        <br/>
        <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
        <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
    </div>
</div>
